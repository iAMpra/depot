
<h2>Your Cart</h2>
  
  
  <% @cart.line_items.each do |item| %>
  <div data-controller="hello">
  <div data-hello-target="detail">
   <p><strong><%= item.quantity %> &times; <%= item.product.product_name %> </strong><span>&#8377;</span><%= number_to_currency(item.product.price,format:"%n") %></p>
   </div>
  <div data-hello-target="productdescription">
  <p><%=item.product.description%></p>
  </div>
   
  
  <button data-action="click->hello#greet">alert</button>
  </div>
  <%= button_to "+",line_items_path(product_id: item.product.id)%>
  <%= button_to "-",line_items_dec_path(product_id: item.product.id)%>

  <% end %>

 <span>&#8377;</span><%= number_to_currency(@cart.total_price,format:"%n") %>

  <%= button_to  'Empty cart', @cart,
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
  

