<h1>Products</h1>
<% if @counter > 5 %>
  <p>
    Visted <%= @counter %> <%= "time".pluralize(@counter) %> before adding item to cart
  </p>
<% end %>

<div class="image-container">
  <% @products.each do |product| %>
    <div class="item-image">
    <div class="pinImage">
   
      <%= link_to image_tag(product.image), product %>
      
     
      
      
    
      </div>
      <%= link_to product.product_name, product %>
      <%= button_to 'Add to Cart', line_items_path(product_id: product) %>
      <div data-controller="hello">
      
      
      <button data-action="hello#addToCart"  id='<%=product.id%>'>add to cart</button>
      </div>
    </div>
    
  <% end %>
</div>
<div data-controller="hello">
<div id="cartshow">
<button data-action="click->hello#loadCart">show the cart</button>
</div>

</div>

<%= link_to "New Product", new_product_path %>
<div data-controller="hello">
<div id="car"></div>
</div>